{
  "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
  "width": 800,
  "height": 450,
  "title": "Percentage of adult population who recreationally fish (per year) 2018-2021",
  "projection": {"type": "equalEarth"},
  "layer": [
    {
      "data": {
        "url": "https://github.com/GanyuGuo/FIT3179-Data-Visualisation-2-Recreational-fishing-in-Australia/blob/main/js/Australia.topojson",
        "format": {"type": "topojson", "feature": "1"}
      },
      "mark": {"type": "geoshape", "fill": "lightgray", "stroke": "white"}
    },
      
    {
      "data": {
        "url": "https://github.com/GanyuGuo/FIT3179-Data-Visualisation-2-Recreational-fishing-in-Australia/blob/main/data/Percentage_of_population_recreationally_fish.csv"
      },
      "mark": {"type": "circle", "tooltip": {"content": "data"}},
      "encoding": {
        "longitude": {"field": "longitude", "type": "quantitative"},
        "latitude": {"field": "latitude", "type": "quantitative"},
        "size": {
          "field": "mag",
          "type": "quantitative",
          "title": "Magnitude (Richter scale)",
          "scale": {"domain": [4, 8]}
        },
        "color": {
          "field": "depth",
          "type": "quantitative",
          "title": "Depth in km",
          "scale": {"scheme": "reds"}
        }
      }
    }     
    
  ]
}
